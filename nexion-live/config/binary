# config/binary - options for live-build(7), binary stage

# Filesystem for image
LB_BINARY_FILESYSTEM="fat16"

# Image type
LB_BINARY_IMAGES="iso-hybrid"

# APT indices
LB_APT_INDICES="true"

# Boot parameters
LB_BOOTAPPEND_LIVE=""
LB_BOOTAPPEND_INSTALL=""
LB_BOOTAPPEND_FAILSAFE="memtest noapic noapm nodma nomce nolapic nomodeset nosmp nosplash vga=normal"

# Bootloader
LB_BOOTLOADER="syslinux"

# Checksums
LB_CHECKSUMS="sha256"

# Compression
LB_COMPRESSION="xz"

# Zsync support
LB_ZSYNC="true"

# Build chrooted
LB_BUILD_WITH_CHROOT="true"

# Debian installer
LB_DEBIAN_INSTALLER="live"
LB_DEBIAN_INSTALLER_DISTRIBUTION="bookworm"
LB_DEBIAN_INSTALLER_PRESEEDFILE=""
LB_DEBIAN_INSTALLER_GUI="false"

# Custom grub splash (optional branding)
LB_GRUB_SPLASH=""

# HDD label
LB_HDD_LABEL="NexionOS"

# HDD size
LB_HDD_SIZE="10000"

# ISO metadata
LB_ISO_APPLICATION="NexionOS Live"
LB_ISO_PREPARER="live-build $VERSION; http://packages.qa.debian.org/live-build"
LB_ISO_PUBLISHER="NexionOS Project; https://nexionos.example.org"
LB_ISO_VOLUME="NexionOS Bookworm $(date +%Y%m%d-%H:%M)"

# EXT filesystem options
LB_EXT_BLOCKSIZE=""
LB_EXT_RESIZEBLOCKS=""
LB_EXT_FUDGEFACTOR=""

# JFFS2 options
LB_JFFS2_ERASEBLOCK=""

# Memtest
LB_MEMTEST="memtest86+"

# Win32 loader
LB_WIN32_LOADER=""

# Netboot options
LB_NET_ROOT_FILESYSTEM="nfs"
LB_NET_ROOT_MOUNTOPTIONS=""
LB_NET_ROOT_PATH="/srv/nexionos-live"
LB_NET_ROOT_SERVER="192.168.1.1"
LB_NET_COW_FILESYSTEM="nfs"
LB_NET_COW_MOUNTOPTIONS=""
LB_NET_COW_PATH=""
LB_NET_COW_SERVER=""
LB_NET_TARBALL="true"

# Firmware inclusion
LB_FIRMWARE_BINARY="false"
LB_FIRMWARE_CHROOT="false"

# Swap file
LB_SWAP_FILE_PATH=""
LB_SWAP_FILE_SIZE="512"

# Syslinux theme (updated branding)
LB_SYSLINUX_THEME="debian"