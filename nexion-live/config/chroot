# config/chroot - options for live-build(7), chroot stage

# Chroot filesystem
LB_CHROOT_FILESYSTEM="squashfs"

# Union filesystem (Debian Bookworm defaults to overlayfs, not aufs)
LB_UNION_FILESYSTEM="overlayfs"

# Expose root as read only
LB_EXPOSED_ROOT="false"

# Hook commands
LB_HOOKS=""

# Interactive build
LB_INTERACTIVE="false"

# Keyring packages (use Debian keyring, not Ubuntu)
LB_KEYRING_PACKAGES="debian-archive-keyring"

# Kernel flavour (Bookworm defaults: amd64 â†’ generic)
LB_LINUX_FLAVOURS="amd64"

# Kernel packages
LB_LINUX_PACKAGES="linux-image"

# Security updates
LB_SECURITY="true"

# Volatile updates (Debian dropped volatile; keep false to avoid confusion)
LB_VOLATILE="false"

# Backports updates
LB_BACKPORTS="true"
